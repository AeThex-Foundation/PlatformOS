# ===========================================
# AeThex PlatformOS Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# ----- CLIENT (Public - exposed to browser) -----

# Supabase Project
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# ----- SERVER (Private - never exposed) -----

# Supabase Service Role (full database access)
SUPABASE_SERVICE_ROLE=your-service-role-key

# JWT Secret (for signing tokens)
JWT_SECRET=generate-a-random-64-char-string

# Stripe (payments)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Discord Integration
DISCORD_CLIENT_ID=your-discord-app-id
DISCORD_CLIENT_SECRET=your-discord-app-secret
DISCORD_BOT_TOKEN=your-bot-token
DISCORD_GUILD_ID=your-server-id

# Email (Nodemailer)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
EMAIL_FROM=noreply@aethex.dev

# ----- OPTIONAL -----

# Node environment
NODE_ENV=development

# Server port (default: 5000)
PORT=5000
