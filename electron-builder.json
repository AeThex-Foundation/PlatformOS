{
  "appId": "com.aethex.education",
  "productName": "AeThex Education",
  "copyright": "Copyright Â© 2026 AeThex Foundation",
  "directories": {
    "buildResources": "build",
    "output": "dist-electron"
  },
  "files": [
    "dist-electron/**/*",
    "dist/spa/**/*",
    "package.json"
  ],
  "extraMetadata": {
    "main": "dist-electron/main.js"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "build/icon.ico",
    "artifactName": "AeThex-Education-Setup-${version}.${ext}",
    "publisherName": "AeThex Foundation",
    "verifyUpdateCodeSignature": false
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "AeThex Education",
    "installerIcon": "build/icon.ico",
    "uninstallerIcon": "build/icon.ico",
    "license": "LICENSE",
    "warningsAsErrors": false
  },
  "portable": {
    "artifactName": "AeThex-Education-Portable-${version}.${ext}"
  },
  "mac": {
    "target": ["dmg", "zip"],
    "icon": "build/icon.icns",
    "category": "public.app-category.education",
    "artifactName": "AeThex-Education-${version}-${arch}.${ext}"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "icon": "build/icon.png",
    "category": "Education",
    "artifactName": "AeThex-Education-${version}-${arch}.${ext}"
  },
  "publish": null
}
